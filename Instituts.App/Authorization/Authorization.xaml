<Window x:Class="Instituts.App.Authorization.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Instituts.App"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="450">

    <Window.Resources>
        <ResourceDictionary Source="AuthorizationStyles.xaml"/>
    </Window.Resources>
    
    <StackPanel>
        <Label x:Name="LabelTitle">Авторизация</Label>
        
        <StackPanel Orientation="Horizontal">
            <Label x:Name="LabelInputLogin">Login</Label>
            <TextBox x:Name="InputLogin"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label x:Name="LabelInputPassword">Password</Label>
            <PasswordBox x:Name="InputPassword"></PasswordBox>
        </StackPanel>

        <DockPanel LastChildFill="False">
            <Button x:Name="ButtonCancel" DockPanel.Dock="Left">Cancel</Button>
            <Button x:Name="ButtonAuth" DockPanel.Dock="Right">Authorization</Button>
        </DockPanel>
    </StackPanel>
</Window>
